<script>
    (function(){
      var el = document.getElementById('nibf-countdown'); if(!el) return;
      var t = el.getAttribute('data-target'); if(!t) return;
      var target = new Date(t).getTime();
      function pad(n){return n<10?'0'+n:n;}
      function tick(){
        var now=Date.now(), diff=Math.max(0,target-now);
        var d=Math.floor(diff/86400000),
            h=Math.floor((diff%86400000)/3600000),
            m=Math.floor((diff%3600000)/60000),
            s=Math.floor((diff%60000)/1000);
        function set(id,val){var x=document.getElementById(id); if(x) x.textContent=pad(val);}
        set('nibf-dd',d); set('nibf-hh',h); set('nibf-mm',m); set('nibf-ss',s);
      }
      tick(); setInterval(tick,1000);
    })();
  </script>

