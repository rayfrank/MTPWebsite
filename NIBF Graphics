      <!-- Countdown lives in an iframe so page JS blockers can't affect it -->
      <div style="margin:14px 0;">
        <iframe title="NIBF Countdown"
          style="width:100%;height:180px;border:0;border-radius:14px;overflow:hidden;background:linear-gradient(180deg,rgba(255,255,255,.05),rgba(255,255,255,.02));"
          srcdoc="<!DOCTYPE html><html><head><meta charset='utf-8'>
          <style>
            :root{ --fg:#fff; --glass:rgba(255,255,255,.08); --line:rgba(255,255,255,.16); }
            html,body{margin:0;padding:0;background:transparent;color:var(--fg);font-family:system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,'Helvetica Neue',Arial,sans-serif}
            .wrap{padding:14px}
            .row{display:flex;gap:10px;flex-wrap:wrap}
            .kpi{flex:1 1 120px;min-width:120px;background:var(--glass);border:1px solid var(--line);
                 border-radius:14px;padding:12px;text-align:center}
            .kpi b{display:block;font-size:28px;font-weight:800}
            .kpi small{opacity:.8;font-size:12px;letter-spacing:.06em}
            .err{margin-top:8px;color:#ffd7d7}
          </style></head><body>
            <div class='wrap'>
              <div class='row'>
                <div class='kpi'><b id='d'>--</b><small>Days</small></div>
                <div class='kpi'><b id='h'>--</b><small>Hours</small></div>
                <div class='kpi'><b id='m'>--</b><small>Mins</small></div>
                <div class='kpi'><b id='s'>--</b><small>Secs</small></div>
              </div>
              <div id='err' class='err' style='display:none'></div>
            </div>
            <script>
              (function(){
                try{
                  // Target: 25 Sep 2025, 09:00 EAT (UTC+3)
                  var Y=2025,M=9,D=25,H=9,MIN=0,S=0;
                  var targetUTC = Date.UTC(Y, M-1, D, H-3, MIN, S); // convert EAT->UTC
                  if(isNaN(targetUTC)) throw new Error('Invalid date');

                  var d=document.getElementById('d'),
                      h=document.getElementById('h'),
                      m=document.getElementById('m'),
                      s=document.getElementById('s');

                  function pad(n){return (n<10?'0':'')+n;}
                  function tick(){
                    var diff=Math.max(0, targetUTC - Date.now());
                    var dd=Math.floor(diff/86400000);
                    var hh=Math.floor((diff%86400000)/3600000);
                    var mm=Math.floor((diff%3600000)/60000);
                    var ss=Math.floor((diff%60000)/1000);
                    d.textContent=pad(dd); h.textContent=pad(hh); m.textContent=pad(mm); s.textContent=pad(ss);
                  }
                  tick(); setInterval(tick,1000);
                }catch(e){
                  var er=document.getElementById('err'); er.style.display='block';
                  er.textContent='Countdown error: '+(e.message||e);
                }
              })();
            </script>
          </body></html>">
        </iframe>
      </div>

